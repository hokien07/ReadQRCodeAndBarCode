<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.app.vpgroup.readqrcodeandbarcode.MainActivity">

    <ImageView
        android:src="@drawable/barcodebackground"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnReadBarCode"
                android:layout_marginRight="3dp"
                android:textSize="20sp"
                android:textColor="@color/btn_text_color"
                android:background="@color/btn_background_color"
                android:text="@string/btn_read_bar_code"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp" />

            <Button
                android:id="@+id/btnReadQrCode"
                android:textSize="20sp"
                android:textColor="@color/btn_text_color"
                android:background="@color/btn_background_color"
                android:text="@string/btn_read_wr_code"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="100dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnCreatQrCode"
                android:textSize="20sp"
                android:textColor="@color/btn_text_color"
                android:background="@color/btn_background_color"
                android:text="@string/btn_create_qr_code"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <Button
                android:id="@+id/btnInfo"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:textSize="20sp"
                android:textColor="@color/btn_text_color"
                android:background="@color/btn_background_color"
                android:text="@string/btn_info"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
